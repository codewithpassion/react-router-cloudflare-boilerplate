{
	"name": "react-router-cloudflare-boilerplate",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"build:staging": "CLOUDFLARE_ENV=staging react-router build",
		"build:prod": "CLOUDFLARE_ENV=production react-router build",
		"deploy": "bun run build && wrangler deploy",
		"dev": "react-router dev",
		"preview": "bun run build && vite preview",
		"start": "wrangler dev",
		"check": "bun cf-typegen && react-router typegen && bun run biome:check",
		"biome:check": "biome check --fix && biome format --write",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"tail:prod": "wrangler tail -e production",
		"tail:staging": "wrangler tail -e staging",
		"db:apply": "wrangler d1 migrations apply app-db",
		"db:gen": "drizzle-kit generate",
		"db:update": "drizzle-kit generate && wrangler d1 migrations apply app-db --local",
		"prepare": "husky"
	},
	"dependencies": {
		"@portcityai/better-auth": "workspace:*",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@react-router/cloudflare": "^7.4.1",
		"@react-router/fs-routes": "^7.4.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tanstack/react-query": "^5.79.2",
		"@trpc/client": "^11.2.0",
		"@trpc/react-query": "^11.2.0",
		"@trpc/server": "^11.2.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.7",
		"drizzle": "^1.4.0",
		"drizzle-kit": "^0.30.6",
		"drizzle-orm": "^0.41.0",
		"framer-motion": "^12.6.3",
		"hono": "^4.7.5",
		"isbot": "^5.1.17",
		"lucide-react": "^0.486.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router": "^7.3.0",
		"react-router-dom": "^7.4.1",
		"resend": "^4.5.1",
		"tailwind-merge": "^3.1.0",
		"tw-animate-css": "^1.2.5",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"zod": "^3.25.49"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/vite-plugin": "^1.3.1",
		"@react-router/dev": "^7.6.1",
		"@tailwindcss/vite": "^4.0.0",
		"@types/bun": "^1.2.8",
		"@types/node": "^22.13.17",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.1",
		"husky": "^9.1.7",
		"stream-browserify": "^3.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.2",
		"wrangler": "^4.18.0"
	},
	"workspaces": {
		"packages": ["packages/*"]
	}
}
